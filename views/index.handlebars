<div class="container">
    <div class="row">
        <div class="col-md-12">
            <img width= "300px" height= "300px" src="../assets/img/burger.jpg" alt="burger" class="img-responsive center-block">
        </div>
        <!-- end first row -->
    </div>
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center text-danger">Kate's Burgers</h1>
        </div>
        <!-- end second row -->
    </div>
    <div class="row">
        <div class="col-md-5">
            <h3>Available Burgers</h3>
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    <h4>{{this.id}}. {{this.burger_name}}
                                <form action='burgers/updateOne/{{this.id}}?_method=PUT' method='POST'>
                                    <input type='hidden' name='devoured' value='true'>
                                    <button type='submit' class="btn btn-default">EAT THIS!</button>
                                </form>
                            </h4>
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5">
            <h3 class="text-muted">Devoured Burgers</h3>
            <ul>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    <h4 class="text-muted">{{this.id}}. {{this.burger_name}}</h4>
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
        <!-- end third row -->
    </div>
    <br>
    <br>
    <div class="row">
        <div class="col-md-12 text-center">
            <form class="create-update-form" action="burgers/insertOne" method="POST">
                <div class="form-group">
                    <textarea type="text" name="name"></textarea>
                    <br>
                    <button class="btn btn-default" type="submit">Add a Burger</button>
                </div>
            </form>
        </div>
        <!-- end fourth row -->
    </div>
</div>